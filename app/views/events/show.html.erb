<!-- Booking Form -->
<% if current_user != @event.user %>
  <div class="panel panel-primary">
    <div class="panel-heading">Register this event</div>

    <div class="panel-body">
      <%= render 'registrations/form' %>
    </div>
  </div>
<% end %>

<div class="panel panel-primary">
  <div class="panel-heading"><%= @event.name %></div>

  <div class="panel-body">

    <h4>Host: </h4> <p><%= @event.user.email %></p>
    <h4>Location:</h4> <p><%= @event.location %></p>

    <!-- Main Info -->
    <h4>Main Info</h4>
    <p>Event Name: <%= @event.name %></p>
    <p><%= !@event.capacity ? ("<s>Capacity</s>").html_safe : "Capacity: " + @event.capacity.to_s %></p>

    <!-- About -->
    <h4>About</h4>
    <p><%= @event.description %></p>

    <!-- Amenities -->
    <h4>Details</h4>
    <ul class="details">
      <li><%= !@event.includes_food ? ("<s>Food</s>").html_safe : "Foods included" %></li>
      <li><%= !@event.includes_drinks ? ("<del>Drinks</del>").html_safe : "Drinks included" %></li>
      <li><%= !@event.starts_at ? ("<del>12/12/2017</del>").html_safe : "Start date: " + @event.starts_at.to_s %></li>
      <li><%= !@event.ends_at ? ("<del>14/12/2017</del>").html_safe : "End Date: " + @event.ends_at.to_s%></li>
      <li><%= !@event.price ? ("<del>80.0</del>").html_safe : "Ticket price: " + @event.price.to_s%></li>
    </ul>
  </div>
</div>

<!-- categories -->
<h4>Categories</h4>
<% @event.categories.each do |category| %>
  <span class="label label-success"><%= category.name %></span>
<% end %>

